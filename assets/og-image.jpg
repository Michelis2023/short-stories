<svg width="1200" height="630" xmlns="http://www.w3.org/2000/svg">
  <!-- Background with Gothic gradient -->
  <defs>
    <linearGradient id="bgGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a0f0a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2d1810;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow">
      <feDropShadow dx="2" dy="2" stdDeviation="3" flood-opacity="0.5"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bgGrad)"/>
  
  <!-- Decorative Gothic border -->
  <rect x="30" y="30" width="1140" height="570" 
        fill="none" stroke="#8B0000" stroke-width="4" 
        stroke-dasharray="10,5" opacity="0.6"/>
  
  <!-- Inner frame -->
  <rect x="50" y="50" width="1100" height="530" 
        fill="none" stroke="#D4AF37" stroke-width="2" opacity="0.4"/>
  
  <!-- Title -->
  <text x="600" y="180" 
        font-family="'Cinzel', Georgia, serif" 
        font-size="72" 
        font-weight="bold" 
        fill="#D4AF37" 
        text-anchor="middle" 
        filter="url(#shadow)">
    Γοτθικά Διηγήματα
  </text>
  
  <!-- Subtitle -->
  <text x="600" y="250" 
        font-family="Georgia, serif" 
        font-size="36" 
        fill="#8B0000" 
        text-anchor="middle" 
        font-style="italic">
    Συλλογή Μυστηριωδών Ιστοριών
  </text>
  
  <!-- Author -->
  <text x="600" y="380" 
        font-family="Georgia, serif" 
        font-size="32" 
        fill="#f5f5f5" 
        text-anchor="middle">
    Μιχαήλ Σ. Μιχαλακόπουλος
  </text>
  
  <!-- Gothic symbols -->
  <text x="100" y="120" font-size="80" fill="#8B0000" opacity="0.3">🦇</text>
  <text x="1050" y="120" font-size="80" fill="#8B0000" opacity="0.3">🕯️</text>
  <text x="100" y="550" font-size="80" fill="#8B0000" opacity="0.3">💀</text>
  <text x="1050" y="550" font-size="80" fill="#8B0000" opacity="0.3">🕯️</text>
  
  <!-- Decorative line -->
  <line x1="300" y1="320" x2="900" y2="320" 
        stroke="#D4AF37" stroke-width="2" opacity="0.5"/>
  
  <!-- Footer text -->
  <text x="600" y="500" 
        font-family="Georgia, serif" 
        font-size="24" 
        fill="#ccc" 
        text-anchor="middle">
    6 Ολοκληρωμένα Διηγήματα Τρόμου
  </text>
  
  <text x="600" y="540" 
        font-family="Georgia, serif" 
        font-size="20" 
        fill="#999" 
        text-anchor="middle">
    michelis2023.github.io/short-stories
  </text>
</svg>